<div class="row featurette">
  <div class="col-md-7">
    <%= link_to image_tag(review.image, class: 'img-thumbnail'), party_path(review.party.id) %>
  </div>
  <div class="col-md-5 align-self-center">
    <% if user_signed_in? && current_user.id == review.user_id %>
      <div class="party__manage">
        <button type="button" class="btn btn-info">
          <%= link_to "編集する", edit_party_review_path(review.party_id, review.id), class: 'text-reset' %>
        </button>
        <button type="button" class="btn btn-secondary">
          <%= link_to "削除する", party_review_path(review.party_id, review.id), method: :delete, class: 'text-reset' %>
        </button>
      </div>
    <% end %>
    <h4><%= review.title %></h4>
    <p><%= review.content %></p>
  </div>
</div>
