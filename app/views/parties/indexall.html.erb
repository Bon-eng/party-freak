<div class="container">
  <div class="row">
    <form class="form-inline my-2 my-lg-0">
      <input type="search" class="form-control mr-sm-2" placeholder="Party検索" aria-label="検索...">
      <button type="submit" class="btn btn-outline-success my-2 my-sm-0">検索</button>
    </form>
  </div>
  <div class="row">
    <% @party.first(9).each do |party| %>
      <div class="card-deck">
        <div class="party-item col-md-4" >
          <div class="card">
            <%= image_tag party.image, class: "card-img-top", width: '360', height: '280' %>
            <div class="card-body">
              <h5 class="card-title text-center"><%= party.name %></h5>
              <p class="card-text"><%= party.country.name %></p>
              <button type="button" class="btn btn-outline-secondary rounded-pill"><%= link_to "詳細を見る", party_path(party.id), class: 'text-reset' %></button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>