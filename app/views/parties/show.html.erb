<div class="container">
  <div class="row">
    <div class="party__wrapper">
    <%# ⬇️⬇️⬇️adminユーザーだけが編集&削除できる⬇️⬇️⬇️ %>
      <% if user_signed_in? && current_user.admin? %>
        <div class="party__manage">
          <%= link_to "編集する", edit_party_path, class: :party__btn %>
          <%= link_to "削除する", party_path, method: :delete, class: :party__btn %>
        </div>
      <% end %>
    <%# ⬆️⬆️⬆️adminユーザーだけが編集&削除できる⬆️⬆️⬆️ %>
      <div class="col-md-12 text-center">
        <div class="party__image">
          <%= image_tag(@party.image, class: 'img-fluid', alt: 'Responsive image') %>
        </div>
        <div class="party__body">
          <div class="party__detail">
            <%= @party.name %>
          </div>
        </div>
        <div class="party__detail">
            <%= safe_join(@party.introduction.split("\n"),tag(:br)) %>
        </div>
        <div class="party__detail">
          <p class="detail__title">開催時期</p>
          <p class="detail__message">
            <%= @party.season.name %>
          </p>
        </div>
        <div class="party__detail">
          <p class="detail__title">開催地域</p>
          <p class="detail__message">
            <%= @party.country.name %>
          </p>
        </div>
        <div class="party__detail">
          <p class="detail__title">ジャンル</p>
          <p class="detail__message">
            <%= @party.genre.name %>
          </p>
        </div>
        <div class="party__detail">
          <p class="detail__title">オフィシャルHP</p>
          <p class="detail__message">
            <div class="alert alert-primary" role="alert">
              <div class="badge badge-primary">
                <%= raw Rinku.auto_link(h(@party.official_url), :all, 'target="_blank"') %>
              </div>
            </div>
          </p>
        </div>
      </div>
      <div class="row featurette">
        <% @reviews.each do |review| %>
          <div class="col-md-7">
            <h2 class="featurette-heading"><%= review.title %></h2>
            <p class="lead"><%= review.content %>
            <% if user_signed_in? && current_user.id == review.user_id%>
              <div class="party__manage">
                <%= link_to "編集する", edit_party_review_path(review.id), class: :party__btn %>
                <%= link_to "削除する", party_review_path(review.id), method: :delete %>
              </div>
            <% end %>
            <p><%= link_to "レビュー by " + review.user.nickname, "/users/#{review.user.id}", class: :text_user %></p>
          </div>
          <div class="col-md-5 align-self-center">
            <%= image_tag review.image, class: 'img-thumbnail' %>
          </div>
          <hr class="featurette-divider">
        <% end %>
      </div>


      <% if user_signed_in? %>
        <%= render partial: "reviews/form", locals: {party: @party}%>
      <% end %>
    </div>
  </div>
</div>